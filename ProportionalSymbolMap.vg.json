{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 300,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "graticule": {
          "step": [2, 2],
          "extent": [[99, 1], [120, 8]]
        }
      },
      "mark": {"type": "geoshape", "stroke": "#ccc", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brittany0111/FIT3179/main/malaysia_states.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "mark": {"type": "geoshape", "fill": "#f5f5f5", "stroke": "#999"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brittany0111/FIT3179/main/tree_cover_gain.csv"
      },
      "mark": { "type": "circle", "filled": true, "stroke": "white", "strokeWidth": 0.5, "opacity": 0.7},
      "encoding": {
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "tree_cover_gain",
          "type": "quantitative",
          "scale": {"type": "sqrt", "range": [5, 2000]},
          "legend": {
            "title": "Tree Cover Gain (ha)",
            "values": [10000, 50000, 150000, 300000]  
          }
        },
        "color": {"value": "#2b8cbe"},
        "tooltip": [
          {"field": "State", "title": "State"},
          {"field": "tree_cover_gain", "title": "Tree Cover Gain (ha)", "format": ",.0f"}
        ]
      }
    },
    {
      "data": {
        "values": [{"State": "Sabah", "longitude": 116.07, "latitude": 5.4}]
      },
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "fill": "#333",
        "dx": 50,
        "dy": -8
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "State"}
      }
    },
    {
    "data": {
        "values": [{"State": "Sarawak", "longitude": 113.5, "latitude": 2.5}]
      },
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "fill": "#333",
        "dx": 15,
        "dy": -8
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "State"}
      }
    },
    {
    "data": {
        "values": [{"State": "Pahang", "longitude": 102.4, "latitude": 3.8}]
      },
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "fill": "#333",
        "dx": 28,
        "dy": -8
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "State"}
      }
    }
  ]
}
