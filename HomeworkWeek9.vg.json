{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 800,
  "projection": {"type": "mercator"},
  "data": {
    "url": "ne_1.json",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"   
    }
  },
  "transform": [
    {
      "lookup": "properties.name",   
      "from": {
        "data": {
          "url": "forest_reserve_state_normalized.csv"
        },
        "key": "state",
        "fields": ["forest_area", "total_area", "forest_norm"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "forest_norm",
      "type": "quantitative",
      "title": "Forest Cover (%)",
      "scale": {"scheme": "greens"}
    },
    "tooltip": [
      {"field": "properties.name", "title": "State"},
      {"field": "forest_norm", "title": "Forest Cover (%)"},
      {"field": "forest_area", "title": "Forest Area (kmÂ²)"}
    ]
  }
}
