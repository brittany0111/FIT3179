{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 300,
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "year_selected",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2021,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "layer": [
        {
      "data": {
        "graticule": {
          "step": [2, 2],
          "extent": [[99, 1], [120, 8]]
        }
      },
      "mark": {"type": "geoshape", "stroke": "#ccc", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/brittany0111/FIT3179/main/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"   
        }
      },
      "transform": [
        {
          "lookup": "properties.name",   
          "from": {
            "data": {
              "url": "forest_reserve_state_normalized.csv"
            },
            "key": "state",
            "fields": ["forest_area", "total_area", "forest_norm", "date"]
          }
        },
        { "calculate": "year(datum.date)", "as": "year" },
        { "filter": "datum.year == year_selected" } 
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "forest_norm",
          "type": "quantitative",
          "title": "Forest Cover (%)",
          "scale": {"scheme": "purples"}
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "forest_norm", "title": "Forest Cover (%)"},
          {"field": "forest_area", "title": "Forest Area (kmÂ²)"},
          {"field": "date", "title": "Date"}
        ]
      }
    }
  ]
}
