{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Ranking of Forest Reserve Areas by State Over Time",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/brittany0111/FIT3179/main/forest_reserve_state_norm_clean.csv"
  },
  "transform": [
    {
    "calculate": "toNumber(datum.forest_norm)",
    "as": "forest_norm_num"
    },
    {
        "window": [
            {
            "op": "rank",
            "as": "rank"
            }
        ],
        "sort": [{"field": "forest_norm_num", "order": "descending"}],
        "groupby": ["date"]
    }
    ],
    "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 3
    },
    "encoding": {
        "x": {
            "field": "date",
            "type": "ordinal",
            "title": "Year"
        },
        "y": {
            "field": "rank",
            "type": "quantitative",
            "sort": "descending",
            "title": "Rank (1 = Largest % of Reserve Area)",
            "axis": {"reverse": true}
        },
        "color": {
            "field": "state",
            "type": "nominal",
            "title": "State",
            "scale": {"scheme": "category20"}
        },
        "tooltip": [
            {"field": "state", "title": "State"},
            {"field": "date", "title": "Date"},
            {"field": "forest_norm_num", "title": "Reserve Area (%)", "format": ".2f"},
            {"field": "rank", "title": "Rank"}
        ]
    }
}
