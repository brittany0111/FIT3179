{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Ranking of Forest Reserve Areas by State Over Time (Bump Chart)",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/brittany0111/FIT3179/main/forest_reserve_state_normalized.csv"
  },
  "transform": [
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [{"field": "forest_norm", "order": "descending"}],
      "groupby": ["date"]
    }
  ],
  "mark": {
    "type": "line",
    "point": true,
    "strokeWidth": 3
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "rank",
      "type": "quantitative",
      "sort": "ascending",
      "title": "Rank (1 = Largest Reserve Area)",
      "axis": {"reverse": true}
    },
    "color": {
      "field": "state",
      "type": "nominal",
      "title": "State"
    },
    "tooltip": [
      {"field": "state", "title": "State"},
      {"field": "year", "title": "Year"},
      {"field": "reserve_area", "title": "Reserve Area"},
      {"field": "rank", "title": "Rank"}
    ]
  }
}
