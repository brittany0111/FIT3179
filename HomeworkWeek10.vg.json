{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Forest Reserves in Malaysia (2003â€“2021)" },
  "data": {
    "url": "https://raw.githubusercontent.com/brittany0111/FIT3179/main/forest_reserve_filtered.csv"
  },
  "width": 900,
  "layer": [
    {
      "selection": {
        "state_highlight": {
          "type": "multi",
          "fields": ["state"],
          "bind": "legend"
        }
      },
      "mark": { "type": "line", "point": true },
      "encoding": {
        "x": { "field": "date", "type": "temporal", "title": "Year" },
        "y": {
          "field": "area",
          "type": "quantitative",
          "title": "Reserve Area (hectares)"
        },
        "color": { "field": "state", "type": "nominal", "legend": { "title": "State" , "orient":"right","offset":70} },
        "opacity": {
          "condition": { "selection": "state_highlight", "value": 1 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "state", "type": "nominal", "title": "State" },
          { "field": "area", "type": "quantitative", "title": "Reserve Area (ha)", "format": ",.0f" },
          { "field": "date", "type": "temporal", "title": "Date" }
        ]
      }
    },
    {
      "data": {
        "values": [
          { "state": "Sabah", "date": "2021-01-01", "area": 3574468 },
          { "state": "Pahang", "date": "2021-01-01", "area": 1588298 },
          { "state": "Sarawak", "date": "2021-01-01", "area": 3964880 }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 6,
        "dy": -5,
        "fontSize": 13,
        "fontWeight": "bold"
      },
      "encoding": {
        "x": { "field": "date", "type": "temporal" },
        "y": { "field": "area", "type": "quantitative" },
        "text": { "field": "area" },
        "color": { "field": "state", "type": "nominal" }
      }
    }
  ]
}
