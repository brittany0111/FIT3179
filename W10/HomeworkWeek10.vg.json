{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Forest Reserves in Malaysia (2003â€“2021)" },
  "data": {
    "url": "https://raw.githubusercontent.com/brittany0111/FIT3179/main/W10/forest_reserve_filtered.csv"
  },
  "width": 600,
  "mark": { "type": "line", "point": true },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "area",
      "type": "quantitative",
      "title": "Reserve Area (hectares)"
    },
    "color": {
      "field": "state",
      "type": "nominal",
      "legend": { "title": "State" }
    },
    "detail": {"field": "state"},
    "tooltip": [
      { "field": "state", "type": "nominal", "title": "State" },
      {
        "field": "area",
        "type": "quantitative",
        "title": "Reserve Area (ha)",
        "format": ",.0f"
      },
      {
        "field": "date",
        "type": "temporal",
        "title": "Date"
      }
    ]
  }
}
